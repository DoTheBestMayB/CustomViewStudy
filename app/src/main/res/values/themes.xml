<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CustomView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.CustomView" parent="Base.Theme.CustomView" />

    <style name="BottomButtonStyle">
        <item name="strokeColor">@color/border</item>
        <item name="strokeWidth">1dp</item>
        <item name="iconGravity">top</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/shapeAddButtonFilled</item>
    </style>

    <style name="right_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="left_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
    </style>
</resources>